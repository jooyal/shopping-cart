<section>
    <div class="container col-md-6 align-items-center justify-contents-center">
        
        <form action="/admin/add-products" method="post" enctype="multipart/form-data">
            <div>
                <h1 class="text-center">Add Product</h1>
            <div class="mb-3">
                <label for="productName" class="form-label">Product Name</label>
                <input type="text" name="productName" class="form-control" id="productName">
            </div>
            <div class="mb-3">
                <label for="productCategory" class="form-label">Product Category</label>
                <input type="text" name="productCategory" class="form-control" id="productCategory">
            </div>
            <div class="mb-3">
                <label for="productPrice" class="form-label">Price</label>
                <input type="number" name="productPrice" class="form-control" id="productPrice">
            </div>
            <div class="mb-3">
                <label for="productDescription" class="form-label">Product Description</label>
                <input type="text" name="productDescription" class="form-control" id="productDescription">
            </div>
            <div class="mb-3">
                <label for="productImage" class="form-label">Image</label>
                <input type="file" name="productImage" class="form-control" id="productImage">
            </div>
            </div>
            
            <button type="submit" name="submit" class="btn btn-success">Submit</button>
        </form>
        
    </div>
</section>