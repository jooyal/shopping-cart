<section>
    <div class="float-end me-5 mt-3 mb-5" >
        <a class="btn bg-success" href="/admin/add-products">Add Product</a>
    </div>
    <div class="container">
        <table class="table" id="myTable" >
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Name</th>
      <th scope="col">Category</th>
      <th scope="col">Price</th>
      <th scope="col">Description</th>
      <th>Image</th>
      <th style="width: 15%;">Options</th>
    </tr>
  </thead>
  <tbody>
    {{#each products}}
    <tr>
      <th scope="row">{{inc @index}}</th>
      <td>{{this.productName}}</td>
      <td>{{this.productCategory}}</td>
      <td>{{this.productPrice}}</td>
      <td>{{this.productDescription}}</td>
      <td><img style="height:50px;width:50px" src="/product-images/{{this._id}}.jpg" alt=""></td>
      <td><a href="/admin/edit-product/{{this._id}}" class="btn btn-warning ps-3 pe-3">Edit</a>
      <a href="/admin/delete-product/{{this._id}}" onclick= "return confirm('Are you sure you want to delete {{this.productName}} ?');" class="btn btn-danger">Delete</a></td>
    </tr>
    {{/each}}
    
  </tbody>
</table>
    </div>
</section>

<script>
  $(document).ready( function () {
    $('#myTable').DataTable();
  } );
</script>