<section>
    <div class="vh-100 d-flex justify-content-center align-items-center">
        <div class="container">
            <div class="row d-flex justify-content-center">
                <div class="col-12 col-md-8 col-lg-6">
                    <div class="border border-3 border-primary"></div>
                    <div class="card bg-white shadow-lg">
                    <div class="card-body p-5">
                        <form class="mb-3 mt-md-4" method="post" action="/admin/change-password">
                        <h2 class="fw-bold mb-2 text-uppercase text-danger">Change Your Password</h2>
                        <p class="text-success mb-5">Please enter your new password</p> 
                        <div class="mb-3">
                            <label for="email" class="form-label ">Enter Your Current Email Address</label>
                            <input type="email" class="form-control" name="Email" id="email" placeholder="name@example.com">
                        </div>
                        <div class="mb-4">
                            <label for="password" class="form-label ">Enter Your New Password</label>
                            <input type="password" class="form-control" name="Password" id="password" placeholder="**********" minlength="8">
                        </div>
                        <div class="mb-4">
                            <label for="password-re" class="form-label ">Re-Enter Your New Password</label>
                            <input type="text" class="form-control" name="PasswordRe" id="password-re" placeholder="**********" minlength="8">
                        </div>
                        <p class="text-danger">{{modifyError}}</p>
                        {{!-- <p class="small"><a class="text-primary" href="/forgot-password">Forgot password?</a></p> --}}
                        <div class="d-grid">
                            <button class="btn btn-outline-dark" type="submit">Change Password</button>
                        </div>
                        </form>

                    </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>