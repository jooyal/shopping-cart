<section>
    <div class="container">
        <table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Date</th>
      <th scope="col">Address</th>
      <th scope="col">Pincode</th>
      <th scope="col">Mobile</th>
      <th scope="col">Amount</th>
      <th scope="col">Payment</th>
      <th scope="col">Status</th>
      <th scope="col">Products</th>
    </tr>
  </thead>
  <tbody>
    {{#each history}}
    <tr>
      <th scope="row">{{inc @index}}</th>
      <td>{{this.date}}</td>
      <td>{{this.deliveryDetails.address}}</td>
      <td>{{this.deliveryDetails.pincode}}</td>
      <td>{{this.deliveryDetails.mobileNumber}}</td>
      <td>{{this.totalAmount}}</td>
      <td>{{this.paymentMethod}}</td>
      <td>
          {{!-- <span class="bg-success p-1 text-light ">{{this.status}}</span> --}}
          {{this.status}}
      </td>
      <td><a href="/order-history-product-list/{{this._id}}" class="btn btn-success">View Products</a></td>
      </tr>
    {{/each}}
    
  </tbody>
</table>
    </div>
</section>